/* lvds panel*/
/{
	/*hack: pin used for select mode 6/8 bit (not for power enable) */
	lcd0_vdd_en: lcd-vdd-en {
		compatible = "regulator-fixed";
		regulator-name = "LCD0_VDD_EN_3V3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		pinctrl-names = "default";
		pinctrl-0 = <&lcd0_vdd_en_pins>;
		gpio = <&gpio0 RK_PC7 GPIO_ACTIVE_HIGH>;
		enable-active-high;
	};

	panel {
		compatible = "samsung,lsl070nl01", "simple-panel";
		backlight = <&backlight>;
		power-supply = <&lcd0_vdd_en>;
		enable-delay-ms = <20>;
		prepare-delay-ms = <20>;
		unprepare-delay-ms = <20>;
		disable-delay-ms = <20>;
		/*bus-format = <MEDIA_BUS_FMT_RGB888_1X7X4_SPWG>;*/
		bus-format = <0x1011>;
		width-mm = <231>;
		height-mm = <139>;
		display-timings {
			native-mode = <&timing0>;
			timing0: timing0 {
				clock-frequency = <25000000>;
				hactive = <800>;
				vactive = <480>;
				hback-porch = <40>;
				hfront-porch = <60>;
				vback-porch = <10>;
				vfront-porch = <10>;
				hsync-len = <2>;
				vsync-len = <1>;
				hsync-active = <1>;
				vsync-active = <1>;
				de-active = <1>;
				pixelclk-active = <0>;
			};
		};
		port {
			panel_in_lvds: endpoint {
				remote-endpoint = <&lvds_out_panel>;
			};
		};
	};
};


&lvds {
	status = "okay";
	ports {
		lvds_out:port@1 {
			reg = <1>;
			lvds_out_panel: endpoint {
				remote-endpoint = <&panel_in_lvds>;
			};
		};
	};
};

&video_phy0 {
